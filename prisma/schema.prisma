generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  Pioneer
  Champion
  Hero
  Legend
}

model user {
  id        String  @id @default(cuid())
  tier      Tier?
  username  String
  firstName String
  lastName  String
  hash      String
  wallet    String?
}

model backet_file {
  id               String             @id @default(cuid())
  username         String
  file_name        String
  file_id          String             @unique
  created_at       DateTime           @default(now())
  video_generation video_generation[]
}

model video_generation {
  id          String       @id @default(cuid())
  username    String
  prompt      String
  limits      Int
  video_id    String
  backet_file backet_file? @relation(fields: [video_id], references: [file_id])
}
